<%- include ../includes/header %>
<div class="container">
	<div class="row">
		<%categroies.forEach(function(cat,index){%>
		   <div class="panel panel-default">
			   <div class="panel-heading">
				   <h3>
					   <a href="/results?cat=<%=cat._id%>&p=0">
						   <%=cat.name%>
					   </a>
					  </h3>
			   </div>
			   <div class="panel-body">
				   <%if(cat.movies&&cat.movies.length>0){%>
				   <% cat.movies.forEach(function (item, index) { %>
				   <div class="col-md-2">
					   <div class="thumbnail">
						   <a href="/movie/<%= item._id %>">
							   <img src="<%= item.poster %>" alt="<%= item.title %>">
							   <div class="caption">
								   <h3><%=item.title %></h3>
								   <p>
									   <a href="/movie/<%= item._id %>" class="btn btn-primary" role="button">观看预告片</a>
								   </p>
							   </div>
						   </a>
					   </div>
				   </div>
				   <% }) %>
				   <%}%>
			   </div>
		   </div>
	<%})%>
	</div>
</div>

<%- include ../includes/footer %>
