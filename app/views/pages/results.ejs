<%- include ../includes/header %>
<div class="container">
    <div class="row">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3><%=keyword%></h3>
            </div>
            <div class="panel-body">
                <%if(movies&&movies.length>0){%>
                <% movies.forEach(function (item, index) { %>
                <div class="col-md-2">
                    <div class="thumbnail">
                        <a href="/movie/<%= item._id %>">
                            <img src="<%= item.poster %>" alt="<%= item.title %>">
                            <div class="caption">
                                <h3><%=item.title %></h3>
                                <p>
                                    <a href="/movie/<%= item._id %>" class="btn btn-primary" role="button">观看预告片</a>
                                </p>
                            </div>
                        </a>
                    </div>
                </div>
                <% }) %>
                <%}%>
            </div>
            <ul class="pagination">
                <%for(var index=0;index<totalPage;index++){%>
                <%if(currentPage==index+1){%>
                <li class="active">
                    <span><%=currentPage%></span>
                </li>
                <%}%>

                <%if(currentPage!=index+1){%>
                <li>
                    <a href="/results/?p=<%=index%>&<%=query%>"><%=index+1%></a>
                </li>
                <%}%>
                <%}%>
            </ul>
        </div>

    </div>
</div>

<%- include ../includes/footer %>
