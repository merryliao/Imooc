<%- include ../includes/header %>
<div class="container">
	<div class="row">
		<% movies.forEach(function (item, index) { %>
			<div class="col-md-2">
				<div class="thumbnail">
					<a href="/movie/<%= item._id %>">
						<img src="<%= item.poster %>" alt="<%= item.title %>">
						<div class="caption">
							<h3><%=item.title %></h3>
							<p>
								<a href="/movie/<%= item._id %>" class="btn btn-primary" role="button">观看预告片</a>
							</p>
						</div>
					</a>
				</div>
			</div>
		<% }) %>
	</div>
</div>

<%- include ../includes/footer %>
