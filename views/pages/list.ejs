<%- include ../includes/header %>
<div class="container">
	<div class="row">
		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th>电影名字</th>
					<th>导演</th>
					<th>国家</th>
					<th>上映时间</th>
					<th>录入时间</th>
					<th>查看</th>
					<th>更新</th>
					<th>删除</th>
				</tr>
			</thead>
			<tbody>
				<% movies.forEach(function (item, index) { %>
					<tr class="item-id-<%= item._id %>">
						<td><%= item.title %></td>
						<td><%= item.doctor %></td>
						<td><%= item.country %></td>
						<td><%= item.year %></td>
						<td><%= moment(item.meta.createAt).format("YYYY/MM/DD") %></td>
						<td><a target="_blank" href="../movie/<%= item._id %>">查看</a></td>
						<td><a href="../admin/update/<%= item._id %>">更新</a></td>
						<td>
							<button class="btn btn-danger del" type="button" data-id="<%= item._id %>">删除</button>
						</td>
					</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</div>
<script src="/javascripts/main.js"></script>
<%- include ../includes/footer %>
